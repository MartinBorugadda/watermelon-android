<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.watermelon.mn.watermelon.SignUpActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_back_ground"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/background_white"
        android:layout_margin="20dp"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="@color/light_red"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/light_light_red"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/light_red" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:background="@null"
                android:inputType="textPassword"
                android:textColorHint="@color/light_light_red"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/light_red" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:background="@null"
                android:inputType="textPassword"
                android:textColorHint="@color/light_light_red"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/light_red" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10.0">

            <TextView
                android:id="@+id/or"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="-------------- or --------------"
                android:textColor="@android:color/black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_width="fill_parent">
            <LinearLayout
                android:id="@+id/btn_facebook"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:background="@color/facebook_blue">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_facebook_box_white"/>
                <TextView
                    android:id="@+id/loginFacebook"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="Facebook"
                    android:textSize="15dp"
                    android:textColor="#ffffffff" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_google"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:background="@color/google_red">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_google_white"/>
                <TextView
                    android:id="@+id/loginGoogle"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:text="Google"
                    android:textColor="#ffffffff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:gravity="center">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/pink_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_login"
            fab:fab_colorNormal="@color/light_red"
            fab:fab_colorPressed="@color/light_light_red"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Already Have an Account"/>
        <LinearLayout
            android:id="@+id/loginSignInLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_light_red_button"
            android:gravity="center"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/loginSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN IN"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
